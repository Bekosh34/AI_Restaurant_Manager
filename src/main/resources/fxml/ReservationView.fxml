<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="com.ai.restaurant.gui.ReservationController">
    <Label text="Manage Reservations" style="-fx-font-size: 24px;"/>
    <Label fx:id="aiRecommendationLabel" text="AI Suggestions will appear here..." style="-fx-text-fill: blue;"/>
    <HBox spacing="10">
        <TextField fx:id="customerNameField" promptText="Customer Name"/>
        <TextField fx:id="dateField" promptText="Date (YYYY-MM-DD)"/>
        <TextField fx:id="tableNumberField" promptText="Table Number"/>
        <Button text="Add Reservation" onAction="#handleAddReservation"/>
    </HBox>
    <TableView fx:id="reservationTable">
        <columns>
            <TableColumn text="ID" fx:id="idColumn"/>
            <TableColumn text="Customer Name" fx:id="customerNameColumn"/>
            <TableColumn text="Date" fx:id="dateColumn"/>
            <TableColumn text="Table Number" fx:id="tableNumberColumn"/>
        </columns>
    </TableView>
    <Button text="Delete Selected Reservation" onAction="#handleDeleteReservation"/>
    <Button text="Back to Main Menu" onAction="#handleBack"/>
</VBox>
