<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="com.ai.restaurant.gui.StaffController">
    <Label text="Manage Staff" style="-fx-font-size: 24px;"/>
    <Label fx:id="feedbackLabel" text="Feedback will appear here..." style="-fx-text-fill: blue;"/>
    <HBox spacing="10">
        <TextField fx:id="nameField" promptText="Staff Name"/>
        <TextField fx:id="roleField" promptText="Role"/>
        <Button text="Add Staff" onAction="#handleAddStaff"/>
    </HBox>
    <TableView fx:id="staffTable">
        <columns>
            <TableColumn text="ID" fx:id="idColumn"/>
            <TableColumn text="Name" fx:id="nameColumn"/>
            <TableColumn text="Role" fx:id="roleColumn"/>
        </columns>
    </TableView>
    <Button text="Update Role" onAction="#handleUpdateRole"/>
    <Button text="Delete Selected Staff" onAction="#handleDeleteStaff"/>
    <Button text="Back to Main Menu" onAction="#handleBack"/>
</VBox>
