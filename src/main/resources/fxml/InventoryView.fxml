<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="com.ai.restaurant.gui.InventoryController">
    <Label fx:id="feedbackLabel" text="Feedback will appear here..." />
    <TextField fx:id="itemNameField" promptText="Item Name" />
    <TextField fx:id="quantityField" promptText="Quantity" />
    <Button text="Add Item" onAction="#handleAddItem" />
    <Button text="Update Quantity" onAction="#handleUpdateQuantity" />
    <Button text="Delete Item" onAction="#handleDeleteItem" />
    <TableView fx:id="inventoryTable">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" />
            <TableColumn fx:id="itemNameColumn" text="Item Name" />
            <TableColumn fx:id="quantityColumn" text="Quantity" />
        </columns>
    </TableView>
    <Button text="Back" onAction="#handleBack" />
</VBox>
